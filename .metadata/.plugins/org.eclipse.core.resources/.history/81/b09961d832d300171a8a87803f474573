public class AdoptAdapter<T extends  Animal & Adoptable> {

    private Activity activity;
    private TextView name;
    private TextView description;
    private TextView rating;

   //private Cat t;

   // private Animal n;

    private  T t;

    public AdoptAdapter(Activity activity, TextView name, TextView description, TextView rating) {
        this.activity = activity;
        this.name = name;
        this.description = description;
        this.rating = rating;
    }


    public void set(T t){
        this.t=t;
        updateView();
    }

    private void updateView() {

        description.setText("adsdsafsfa");

    }


}
